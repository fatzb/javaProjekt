<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="-Infinity"  spacing="10" style="-fx-padding: 20;"
      alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo8hamster.MainViewController" >

      <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="10.0" text="%EnterName" fx:id="enterName" textAlignment="CENTER" />
      <TextField  fx:id="nameField"/>
      <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="10.0" text="%SelectLanguage" fx:id="selectLanguage" />
      <ComboBox  fx:id="languageBox" prefWidth="150.0"/>


      <Button   fx:id="startButton" text="%start" mnemonicParsing="false"
                onAction="#handleStart"/>
</VBox>
