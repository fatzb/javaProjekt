<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5deb3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo8hamster.GameViewController">

   <Label fx:id="levelLabel" layoutX="278.0" layoutY="74.0" style="-fx-font-weight: bold;
    -fx-background-color: #ffe0b2;-fx-background-radius: 10;-fx-padding: 10;" text="%level_display">
      <font>
         <Font size="18.0" />
      </font>
   </Label>

   <Label fx:id="passiveIncomeLabel" layoutX="382.0" layoutY="161.0" style="-fx-font-weight: bold;
    -fx-background-color: #ffe0b2;-fx-background-radius: 10;-fx-padding: 10;" text="%passiveIncome" textFill="#424242">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <Label fx:id="coinsLabel" layoutX="424.0" layoutY="35.0" style="-fx-font-weight: bold;
    -fx-background-color: #ffe0b2;-fx-background-radius: 10;     -fx-padding: 10;" text="" textFill="#424242">

      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <Button fx:id="upgradeButton" layoutX="424.0" layoutY="274.0" mnemonicParsing="false" onAction="#handleUpgrade"
           prefHeight="55.0" prefWidth="143.0" style="-fx-background-color: #ffa726; -fx-text-fill: white; -fx-font-weight:bold;
           -fx-background-radius: 10; " text="%upgrade_button" textFill="WHITE">
      <font>
         <Font size="14.0" />
      </font>
   </Button>
   <Button fx:id="clickButton" layoutX="268.0" layoutY="254.0" mnemonicParsing="false"
           onAction="#handleClick" prefHeight="97.0" prefWidth="122.0" style="-fx-background-color: #ffa726;
           -fx-text-fill: white; -fx-font-weight:bold;            -fx-background-radius: 10;" text="%click" textFill="WHITE">
      <font>
         <Font size="24.0" />
      </font>
   </Button>
   <Button fx:id="saveButton" layoutX="52.0" layoutY="271.0" mnemonicParsing="false"
           onAction="#handleSave" prefHeight="39.0" prefWidth="154.0" style=" -fx-font-size:14px;-fx-background-color:
            #ffa726; -fx-text-fill: white; -fx-font-weight:bold;            -fx-background-radius: 10;" text="%game_save" textFill="WHITE">
      <font>
         <Font size="18.0" />
      </font>
   </Button>

   <Button fx:id="resetButton" layoutX="52.0" layoutY="310.0" mnemonicParsing="false" onAction="#handleReset"
           prefHeight="39.0" prefWidth="154.0" style=" -fx-font-size:14px;-fx-background-color: #ffa726; -fx-text-fill: white; -fx-font-weight:bold;            -fx-background-radius: 10;" text="%game_reset" textFill="WHITE">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
   <ImageView fitHeight="223.0" fitWidth="250.0" layoutX="17.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images/hamster.png" />
      </image>
   </ImageView>


        </AnchorPane>
